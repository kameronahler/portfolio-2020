{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./*"]
    },
    "strict": false,
    "types": ["node"],
    "target": "es2017"
  },
  "include": ["src/**/*"]
}
